<?xml version="1.0"?>
<settings xmlns="urn:settings" xmlns:xs="http://www.w3.org/2001/XMLSchema-instance" xs:schemaLocation="urn:settings Settings.xsd">
	<list orderAsc="Sort">
		<!--selectRowProperty="IsDefault"-->

		<global>
			<create/>
		</global>

		<actions>
			<visibility/>
			<sort field="Sort"/>
			<edit/>
			<delete/>
		</actions>

		<cols>
			<string name="FirstName" title="Имя"/>
			<string name="Title" title="Должность"/>
      <string name="Language" title="Язык"/>
		</cols>

	</list>

	<form>
		<tab name="General">
			<string name="FirstName" title="Имя" />
			<string name="LastName" title="Фамилия" />
      <string name="Title" title="Должность" />

      <select name="Language" title="Язык">
        <option value="ru">ru</option>
        <option value="en">en</option>
      </select>
      
      <wysiwyg name="Bio" title="БИО" />
		
		<wysiwyg name="Signature" title="Подпись" />
		</tab>
  
     <tab name="Images">
      <file name="Files" isImage="true" size="300" title="Прикреплённые изображения" showTitle="true" />
    </tab>
		<tab name="Metadata">			
			<string name="MetaTitle" title="MetaTitle" />
			<string name="MetaKeywords" title="MetaKeywords" />
			<textarea name="MetaDescription" title="MetaDescription" />
		</tab>
	</form>
</settings>