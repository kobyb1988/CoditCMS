<?xml version="1.0"?>
<settings xmlns="urn:settings" xmlns:xs="http://www.w3.org/2001/XMLSchema-instance" xs:schemaLocation="urn:settings Settings.xsd">
	<list orderAsc="Sort">
		<!--selectRowProperty="IsDefault"-->

		<global>
			<create/>
		</global>

		<actions>
			<visibility/>
			<sort field="Sort"/>
			<edit/>
			<delete/>
		</actions>

		<cols>			
			<string name="Title" title="Название"/>
			<string name="Language" title="Язык"/>
    </cols>

	</list>

	<form>
		<tab name="General">
		  <string name="Title" title="Название" />			
			<string name="EmbeddedMedia" title="HTML перед постом (видео)"/>
					<date name="Date"   title="Дата"/>
      <select name="Language" title="Язык">
        <option value="ru">ru</option>
        <option value="en">en</option>
      </select>


			<select name="CrewMemberId" title="Авторы" reference="CrewMember" optionTitle="FirstName" optionValue="Id" multiple="false" localizable="true">
				<option>Нет</option>
			</select>
			
			<select name="Categories" title="Категории" reference="Categories" optionTitle="Name" optionValue="Id" multiple="true" localizable="true">
				<option>Нет</option>
			</select>

			<select name="Tags" title="Теги" reference="Tags" optionTitle="Name" optionValue="Id" multiple="true" localizable="true">
				<option>Нет</option>
			</select>
			
			<checkbox name="ShowOnHomePage" title="Показывать на главной" />
    </tab>
    <tab name="Content">
			<wysiwyg name="Content" title="Контент" />
    </tab>
    <tab name="Images">
      <file name="Files" isImage="true" size="300" title="Прикреплённые изображения" showTitle="true" />
    </tab>
		<tab name="Metadata">			
			<string name="MetaTitle" title="MetaTitle" />
			<string name="MetaKeywords" title="MetaKeywords" />
			<textarea name="MetaDescription" title="MetaDescription" />
		</tab>
	</form>
</settings>